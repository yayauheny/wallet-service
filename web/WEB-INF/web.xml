<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AuthServlet</web-resource-name>
            <url-pattern>/auth/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>RegisterServlet</web-resource-name>
            <url-pattern>/register/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
    </security-constraint>

    <filter>
        <filter-name>DefaultConfigurationFilter</filter-name>
        <filter-class>io.ylab.walletservice.in.servlet.filter.DefaultConfigurationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DefaultConfigurationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>io.ylab.walletservice.in.servlet.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>